#!/bin/env bash

if [ $# -le 2 ]; then
    pamixer $1 $2
    volume=`pamixer --get-volume-human`
    
    if [[ $1 -eq "-i" ]]; then
        dunstify -h string:x-dunst-stack-tag:volume "   $volume" -t 2000
    elif [[ $1 -eq "-d" ]]; then
        dunstify -h string:x-dunst-stack-tag:volume "   $volume" -t 2000
    fi
fi
