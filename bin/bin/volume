#!/bin/env bash

if [ $# -eq 1 ]; then
    amixer -q set Master $1
    VOLUME=`amixer get Master | awk 'NR == 7 {print $5}' | tr -d '[%]' `
    
    if [[ $(echo -e $1) =~ "+" ]]; then
    dunstify -h string:x-dunst-stack-tag:volume "   $VOLUME%" -t 2000
    elif [[ $(echo -e $1) =~ "-" ]]; then
    dunstify -h string:x-dunst-stack-tag:volume "   $VOLUME%" -t 2000
    fi
fi
