workspace $ws11 output $ml

#---------------------------------------------------------------Window Resizing

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $up resize grow height 10 px or 10 ppt
    bindsym $down resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#--------------------------------------------------------------------Media Keys

# backlight
bindsym XF86MonBrightnessUp exec --no-startup-id $HOME/bin/light +10% 
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/bin/light 10%- 

# player
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioPlay exec --no-startup-id $HOME/bin/play-pause 
bindsym XF86AudioNext exec --no-startup-id playerctl next

# audio
bindsym XF86AudioMute exec --no-startup-id $HOME/bin/muted
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/bin/volume 5%-
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id $HOME/bin/volume 1%-
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/bin/volume 5%+
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id $HOME/bin/volume 1%+
