#---------------------------------------------------------------------Variables
# general
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# specific 
set $term kitty
set $browser qutebrowser
set $music spotify
set $fm ranger
set $ani ani-cli
set $manga tachidesk

# launcher
set $menu $HOME/.config/rofi/launchers/launcher.sh
set $run $HOME/.config/rofi/launchers/runmodi.sh
set $rofifs $HOME/.config/rofi/launchers/fsmodi.sh
set $poweroff $HOME/.config/rofi/powermenu/powermenu.sh

#----------------------------------------------------------------------Programs
# wallpaper
bindsym $mod+Shift+b exec --no-startup-id "$HOME/bin/kwal"
bindsym $mod+Shift+ctrl+b exec --no-startup-id "$HOME/bin/kwal $HOME/.backgrounds/desktop/cyberpunk.jpg"

# i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+q kill
bindsym $mod+space exec --no-startup-id i3-msg "floating toggle" && i3-msg "reload" #To solve tiling two times problem
#bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+Shift+Return exec --no-startup-id i3-msg open
bindsym $mod+Shift+p exec --no-startup-id "$HOME/.config/polybar/launch"
bindsym $mod+Shift+e exec --no-startup-id "$HOME/.config/rofi/applets/android/exit-i3.sh"

# launcher
bindsym $mod+Tab exec --no-startup-id $menu
bindsym $mod+q exec --no-startup-id $run
bindsym $mod+Shift+Tab exec --no-startup-id $rofifs
bindsym $mod+p exec --no-startup-id $poweroff
bindsym $mod+b exec --no-startup-id $browser &
# browser
bindsym $mod+ctrl+b exec --no-startup-id prime-run $browser &
bindsym $mod+ctrl+2 exec --no-startup-id "$HOME/bin/qb2 && sleep 1 && kitty -e nvim"
bindsym $mod+ctrl+3 exec --no-startup-id "$HOME/bin/qb3"
bindsym $mod+ctrl+0 exec --no-startup-id "$HOME/bin/qb10"
# extras
bindsym $mod+s exec --no-startup-id $mplayer &
bindsym $mod+w exec --no-startup-id "$term -e $fm"
bindsym $mod+a exec --no-startup-id "$term -e $ani &"
bindsym $mod+m exec --no-startup-id "$term -e sleep 0.0001 && $HOME/bin/tachidesk"
bindsym $mod+d exec --no-startup-id "/opt/discord/Discord/Discord"
bindsym $mod+Escape exec --no-startup-id flameshot gui
#bindsym $mod+ctrl+minus exec --no-startup-id "$HOME/bin/mpyt"
bindsym $mod+ctrl+minus exec --no-startup-id "$HOME//bin/qb11"
# gentoo update
bindsym $mod+g exec --no-startup-id "i3-msg workspace 4; exec --no-startup-id kitty -e $HOME/bin/gentoo-sys-update"

#------------------------------------------------------------------Window Focus

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

#---------------------------------------------------------------Window Movement

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

