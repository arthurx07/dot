$HOME/.local/bin/kwal $HOME/img/wal/4.jpg & #&& i3-msg 'restart'

# Monitor Config & picom
$HOME/.local/bin/xrandr-conf & 

# Picom
#exec_always --no-startup-id pgrep "picom" > /dev/null && killall picom && "picom &" || sleep 0.1 && picom &
